# =========================================================================================================================
# igw variables
# =========================================================================================================================
variable "create_igw" {
  type        = bool
  description = "create internet gateway"
  default     = false
}
# =========================================================================================================================
# resource creation
# =========================================================================================================================
# -------------------------------------------------------------------------------------------------------------------------
# igw
# -------------------------------------------------------------------------------------------------------------------------
resource "aws_internet_gateway" "env_igw" {
  count  = var.create_igw ? 1 : 0
  vpc_id = aws_vpc.env_vpc[0].id
  tags = merge(
    local.default_tags,
    {
      "Name" = "${var.owner}-${var.environment}-igw"
    }
  )
}